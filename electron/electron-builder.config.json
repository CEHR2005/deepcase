{
  "appId": "deep.case.app",
  "directories": {
    "buildResources": "resources"
  },
  "files": [
    "assets/**/*",
    "build/**/*",
    "capacitor.config.*",
    "app/**/*"
  ],
  "publish": null,
  "afterPack": "./recovery-after-electron-build.js",
  "nsis": {
    "allowElevation": true,
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "win": {
    "target": [
      "nsis"
    ],
    "icon": "assets/appIcon.ico"
  },
  "mac": {
    "category": "public.app-category.developer-tools",
    "target": [
      "mas-dev"
    ],
    "icon": "assets/appIcon.icns"
  },
  "masDev": {
    "type": "development",
    "provisioningProfile": "./deepcasedevelopment.provisionprofile"
  },
  "mas": {
    "type": "distribution",
    "provisioningProfile": "./deepcasemacappstore.provisionprofile",
    "entitlements": "./entitlements.mas.plist",
    "entitlementsInherit": "./entitlements.mas.inherit.plist",
    "asarUnpack": [
      "node_modules"
    ]
  },
  "linux": {
    "target": [
      "appImage",
      "deb",
      "rpm",
      "apk"
    ],
    "category": "Utility",
    "icon": "assets/appIcon.png"
  },
  "forceCodeSigning": false,
  "removePackageScripts": false,
  "includeSubNodeModules": false,
  "asar": false
}